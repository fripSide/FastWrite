{
  "name": "fastwrite",
  "module": "src/cli.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --compile --outfile fastwrite",
    "build:mac-arm": "bun build src/cli.ts --compile --outfile fastwrite-darwin-arm64 --target bun-darwin-arm64",
    "build:mac": "bun build src/cli.ts --compile --outfile fastwrite-darwin-x64 --target bun-darwin-x64",
    "build:linux": "bun build src/cli.ts --compile --outfile fastwrite-linux-x64 --target bun-linux-x64",
    "build:windows": "bun build src/cli.ts --compile --outfile fastwrite-windows-x64.exe --target bun-windows-x64",
    "typecheck": "bunx tsc --noEmit"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "openai": "^4.77.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/diff": "^5.0.8",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.7.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
